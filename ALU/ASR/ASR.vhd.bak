library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.STD_LOGIC_ARITH.ALL;
use IEEE.STD_LOGIC_UNSIGNED.ALL;

entity ASR is
port (CLK: in std_logic;
		A: in std_logic_vector(31 downto 0);
		B: in std_logic_vector(31 downto 0);
		
		S: out std_logic_vector(31 downto 0)
		);
end LSR;
	
architecture rtl of LSR is

begin
Process(CLK) begin
	if CLK'EVENT AND CLK='1'THEN
		
		case B(4 downto 0) is
			when "00001" => S<=A(31) & A(31 downto 1);
			when "00010" => S<=(1 DOWNTO 0 =>A(31)) & A(31 downto 2);
			when "00011" => S<="000" & A(31 downto 3);
			when "00100" => S<="0000" & A(31 downto 4);
			when "00101" => S<="00000" & A(31 downto 5);
			when "00110" => S<="000000" & A(31 downto 6);
			when "00111" => S<="0000000" & A(31 downto 7);
			when "01000" => S<="00000000" & A(31 downto 8);
			when "01001" => S<="000000000" & A(31 downto 9);
			when "01010" => S<="0000000000" & A(31 downto 10);
			when "01011" => S<="00000000000" & A(31 downto 11);
			when "01100" => S<="000000000000" & A(31 downto 12);
			when "01101" => S<="0000000000000" & A(31 downto 13);
			when "01110" => S<="00000000000000" & A(31 downto 14);
			when "01111" => S<="000000000000000" & A(31 downto 15);
			when "10000" => S<="0000000000000000" & A(31 downto 16);
			when "10001" => S<="00000000000000000" & A(31 downto 17);
			when "10010" => S<="000000000000000000" & A(31 downto 18);
			when "10011" => S<="0000000000000000000" & A(31 downto 19);
			when "10100" => S<="00000000000000000000" & A(31 downto 20);
			when "10101" => S<="000000000000000000000" & A(31 downto 21);
			when "10110" => S<="0000000000000000000000" & A(31 downto 22) ;
			when "10111" => S<="00000000000000000000000" & A(31 downto 23) ;
			when "11000" => S<="000000000000000000000000" & A(31 downto 24) ;
			when "11001" => S<="0000000000000000000000000" & A(31 downto 25) ;
			when "11010" => S<="00000000000000000000000000" & A(31 downto 26) ;
			when "11011" => S<="000000000000000000000000000" & A(31 downto 27) ;
			when "11100" => S<="0000000000000000000000000000" & A(31 downto 28) ;
			when "11101" => S<="00000000000000000000000000000" & A(31 downto 29);
			when "11110" => S<="000000000000000000000000000000" & A(31 downto 30);
			when "11111" => S<="0000000000000000000000000000000" & A(31);
			when others  => S<=A;
		end case;
		
		
			
	else null;
	end if;
end process;


end RTL;